@page
@model BankApp.Pages.AccountManagment.CreateAccountModel

@{
    ViewData["Title"] = "CreateAccount";
}

<h1>CreateAccount</h1>

<h4>BankAccount</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div>
                <p>Search for person to create an account.</p>
                <label asp-for="Email">Email: </label>
                <input asp-for="Email" type="email" autocomplete="off" placeholder="Search for email" />
            </div>
            <div>
                <input type="submit" value="search" class="btn btn-secondary" />
            </div>
        </form>
        @if(Model.Person != null)
        {
            <form method="post">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="BankAccount.Name" class="control-label"></label>
                    <input asp-for="BankAccount.Name" class="form-control" />
                    <span asp-validation-for="BankAccount.Name" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="BankAccount.Balance" class="control-label"></label>
                    <input asp-for="BankAccount.Balance" class="form-control" />
                    <span asp-validation-for="BankAccount.Balance" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <input type="submit" value="Create" class="btn btn-primary" />
                </div>
            </form>
        }
    </div>
</div>

<div>
    <a asp-page="./ViewAccount">Back to Accounts</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
